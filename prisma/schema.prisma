// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  name      String
  role      UserRole @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  deals     Deal[]
  
  @@map("users")
}

// Vehicle model
model Vehicle {
  id        String   @id @default(cuid())
  year      String
  make      String
  model     String
  vin       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  transactions Transaction[]
  
  @@map("vehicles")
}

// Customer model
model Customer {
  id        String   @id @default(cuid())
  name      String
  contact   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  transactions Transaction[]
  
  @@map("customers")
}

// Transaction model (each row in Excel table)
model Transaction {
  id        String        @id @default(cuid())
  vehicleId String
  customerId String
  date      DateTime
  status    VehicleStatus?
  plate     String?
  note      String?
  ref       String?
  archived  Boolean       @default(false)
  archivedAt DateTime?
  lastUpdatedBy String?   // Username of user who last updated status
  lastUpdatedAt DateTime? // When status was last updated
  noteCreatedBy String?   // Username of user who created/updated the note
  noteCreatedAt DateTime? // When note was created/updated
  isUrgent  Boolean       @default(false) // Mark TITLE_PENDING as urgent
  preInspection Boolean   @default(false) // Pre-inspection completed
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  customer  Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  @@map("transactions")
}

// Enum values
enum UserRole {
  ADMIN
  EDITOR  // Can only change status
  VIEWER  // Read only
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum VehicleStatus {
  TRANSFER_PLATE
  PICKED_UP
  INSPECTED
  REGISTERED
  RE_INSPECTION
  READY_FOR_PICKUP
  TITLE_PENDING
  AWAITING_STAMP
  TITLE_REQUESTED
  DEPOSIT
}

// Note model for dashboard notes
model Note {
  id            String   @id @default(cuid())
  name          String?
  content       String
  completed     Boolean  @default(false)
  createdByIP   String?
  createdByName String?  // Name of user who created the note
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("notes")
}

enum NoteType {
  READY
  REGISTRATION_PICKED_UP
}

// Deal model
model Deal {
  id          String    @id @default(cuid())
  dealNumber  String    // 4-digit number
  type        DealType
  amount      Float?    // Admin can edit this
  insurance   String?   // Optional insurance information
  createdById String
  readByAdmin Boolean   @default(false) // Track if admin has seen this deal
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  createdBy   User      @relation(fields: [createdById], references: [id], onDelete: Cascade)
  
  @@map("deals")
}

enum DealType {
  DEPOSIT
  DEAL
}
