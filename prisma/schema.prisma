// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  name      String
  role      UserRole @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

// Vehicle model
model Vehicle {
  id        String   @id @default(cuid())
  year      String
  make      String
  model     String
  vin       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  transactions Transaction[]
  
  @@map("vehicles")
}

// Customer model
model Customer {
  id        String   @id @default(cuid())
  name      String
  contact   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  transactions Transaction[]
  
  @@map("customers")
}

// Transaction model (each row in Excel table)
model Transaction {
  id        String        @id @default(cuid())
  vehicleId String
  customerId String
  date      DateTime
  payment   PaymentStatus @default(UNPAID)
  tax       Float?
  status    VehicleStatus?
  plate     String?
  note      String?
  ref       String?
  archived  Boolean       @default(false)
  archivedAt DateTime?
  lastUpdatedBy String?   // Username of user who last updated status
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  customer  Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  @@map("transactions")
}

// Enum values
enum UserRole {
  ADMIN
  EDITOR  // Can only change status
  VIEWER  // Read only
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum VehicleStatus {
  TRANSFER_PLATE
  PICKED_UP
  INSPECTED
  REGISTERED
  RE_INSPECTION
  READY_FOR_PICKUP
  TITLE_PENDING
  AWAITING_STAMP
}

// Note model for dashboard notes
model Note {
  id          String   @id @default(cuid())
  name        String?
  content     String
  completed   Boolean  @default(false)
  createdByIP String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("notes")
}

enum NoteType {
  READY
  REGISTRATION_PICKED_UP
}
